<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/spendCustomListView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"   
    android:gravity="center_horizontal"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/tvListViewSpendValue"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_gravity="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="$ 1200"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.28"
        android:gravity="start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvListViewSpendCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Category"
            android:textStyle="bold"
        	android:textSize="15dp" />

        <TextView
            android:id="@+id/tvListViewSpendDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SpendDesc"
        	android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvListViewSpendCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.50"
        android:gravity="end"
        android:text="14/11/2017"
        android:textSize="20dp" />

</LinearLayout>
